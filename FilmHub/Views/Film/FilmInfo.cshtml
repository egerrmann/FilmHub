@model Database.Film.Film

@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";
}

<style>
    #sidebar{
        float: left;
        width: 300px;
        height: 400px;
        margin-left: 0%;
    }
    
    #main{
        background-color: #ffffff;
        height: auto;
        margin-left: 33%;
    }
</style>
<h2 style="margin-top: 6%; margin-bottom: 5%">@Model.Title</h2>
<div id="sidebar">
    <img style="border-radius: 10px; border: 1px solid #000000" src="@Model.Image" height="400" width="300" alt="">
    <p></p>
    <a href='@Url.Action("AddToFavourite", "User", new {currentFilmImage = Model.Image})'>
        <button type="submit" class="btn btn-primary">Add to favourite</button>
    </a>
</div>
<div id="main">
    <table class="table table-striped table-hover">
        <tbody>
        <tr>
            <th scope="row">Title</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th scope="row">Year</th>
            <td>@Model.Year</td>
        </tr>
        <tr>
            <th scope="row">Genre</th>
            <td>@Model.Genre</td>
        </tr>
        <tr>
            <th scope="row">Director</th>
            <td>@Model.Director</td>
        </tr>
        <tr>
            <th scope="row">Summary</th>
            <td>@Model.Summary</td>
        </tr>
        <tr>
            <th scope="row">Time</th>
            <td>@Model.Time</td>
        </tr>
        <tr>
            <th scope="row">Age</th>
            <td>@Model.Age+</td>
        </tr>
        <tr>
            <th scope="row">Country</th>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <th scope="row">Actors</th>
            <td>
                @string.Join(", ", Model.Actors)
            </td>
        </tr>
        </tbody>
    </table>
  @*<a href='@Url.Action("AddToBookmarks", "Film", new {filmImage = Model.Image})'>
    <button type="submit" class="btn btn-primary">Add to bookmarks</button>
</a>*@

@using (Html.BeginForm("LeaveComment", "Film", FormMethod.Get))
{
    <div>
        <input class="form-control mr-sm-2" type="text" name="comment" placeholder="Type something..." aria-label="Comment">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Leave a comment</button>
    </div>
}
@foreach (var comment in Model.Comments)
{
    <h6>@comment.User.Name - @comment.Text</h6>
}
</div>
